{
  "compilerOptions": {
    "target": "ES2020",                    
    "module": "CommonJS",                  
    "outDir": "./dist",                    
    "rootDir": "./src",                    
    "strict": true,                        
    "esModuleInterop": true,               
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                  
    "sourceMap": true,                     
    "resolveJsonModule": true              
  },
  "include": ["src/**/*", "src/types/**/*"],
  "exclude": ["node_modules", "dist"]       
}
